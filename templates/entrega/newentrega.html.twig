<div class="container d-flex justify-content-center align-items-center vh-100">
  <div class="card" style="width: 400px;">
    <div class="card-body">
      {{ form_start(form) }}
      
      <div class="form-group">
        {{ form_label(form.nombre, 'Nombre de la entrega: ') }}
        {{ form_widget(form.nombre, { 'attr': {'class': 'form-control'} }) }}
      </div>
      
      <div class="form-group">
        {{ form_label(form.fecha_entrega, 'Fecha de entrega: ') }}
        <div id="fecha_entrega" class="input-group">
          {{ form_widget(form.fecha_entrega, { 'attr': {'class': 'form-control flatpickr-input'} }) }}
          <span class="input-group-text">
            <i class="fa fa-calendar"></i>
          </span>
        </div>
      </div>
      
      <div class="text-center">
        {{ form_widget(form.submit, { 'attr': {'class': 'btn btn-primary mt-3'} }) }}
      </div>
      
      {{ form_end(form) }}
    </div>
  </div>
</div>



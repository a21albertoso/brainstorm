{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card p-4">

                <a class="link-dark" href="{{ path('principal') }}"><span class="material-symbols-outlined">
                    arrow_back
                    </span></a>

                    <h1 class="text-center">Informaci√≥n del usuario</h1>

                    <div class="text-center mt-4">
                        <div class="d-flex justify-content-center">
                            {% if user.foto is not null %}
                                <div class="d-flex align-items-center">
                                    <img src="{{ asset('uploads/fotos/' ~ user.foto) }}" alt="Foto de perfil" class="rounded-circle" style="width: 120px; height: 120px;">
                                </div>
                            {% else %}
                                <div class="rounded-circle" style="width: 120px; height: 120px; background-color: {{ randomColor }}; text-align: center; line-height: 110px; color: #fff; font-weight: bold;">
                                    <div style="line-height: 110px; font-size: 80px;">{{ user.email|first|upper }}</div>
                                </div>
                            {% endif %}
                            <h3 class="mt-3">
                                <span class="text-truncate ms-5">{{ user.email }}</span>
                            </h3>
                        </div>
                    </div>
                    <div class="mt-5 text-center">
                        <h4 class="mb-3">Detalles del usuario</h4>
                        <ul class="list-unstyled">
                            <li>Email: {{ user.email }}</li>
                            <li>Rol: {{ user.roles[0]|replace({'ROLE_': ''})|default(user.roles[0]) }}</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

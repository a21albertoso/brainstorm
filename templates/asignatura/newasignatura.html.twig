{% extends 'base.html.twig' %}

{% block title %}
    Nueva Asignatura
{% endblock %}

{% block body %}
    <div class="container rosa">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card mt-5">
                    <div class="card-body">
                        <h1 class="card-title text-center">Crear una nueva asignatura</h1>

                        {{ form_start(form) }}
                        {{ form_row(form.nombre, { 'attr': {'class': 'form-control mb-3'} }) }}
                        {{ form_row(form.guardar, { 'attr': {'class': 'btn btn-primary'} }) }}
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
